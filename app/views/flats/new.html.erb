<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Baptiste Airbnb</a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <%= link_to "Add new flat", new_flat_path, class: 'btn btn-outline-primary my-2 my-sm-0 ml-2' %>
    </div>
  </div>
</nav>

<div class="container mt-5 addflat">
  <div class="row">
    <div class="col">
      <h1>Add a new flat</h1>

      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :number_of_guests %>
        <%= f.input :price_per_night %>
        <%= f.submit class: 'btn btn-outline-primary mt-3' %>
      <% end %>
      <%= link_to "Cancel", flats_path, class: 'btn btn-outline-danger mt-3' %>
    </div>
  </div>
</div>
