<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Baptiste Airbnb</a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <%= link_to "Add new flat", new_flat_path, class: 'btn btn-outline-primary my-2 my-sm-0 ml-2' %>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <div class="row">
    <h1>All our flats (<%= @flats.count %>)</h1>
  </div>
  <div class="row mb-5">
    <% @flats.each do |flat| %>
      <div class="col-4">
          <div class="flat-card">
            <div class="flat-card-image" style="background-image: url('')"></div>
            <div class="flat-card-content">
              <div class="flat-card-title">
                <h4><%=flat.name%></h4>
              </div>
              <p><%=flat.address%></p>
              <div class="flex">
                <div class="flex">
                  <i class="material-icons mr-2">people</i><span><%=flat.number_of_guests%></span>
                </div>
                <div class="flex ml-3">
                  <i class="material-icons mr-2">euro_symbol</i> <%=flat.price_per_night%>
                </div>
              </div>
            </div>
            <div class="flat-card-actions ml-auto">
              <%= link_to "More info", flat_path(flat), class: 'mr-3 text-primary' %>
              <%= link_to "Edit", edit_flat_path(flat), class: 'mr-3 text-warning' %>
              <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'mr-3 text-danger' %>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
